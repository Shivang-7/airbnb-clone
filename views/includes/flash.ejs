<!-- Flash msg, only if success array exists and lenghth>0 -->
<% if (success && success.length> 0) { %>
    <br>
    <div class="alert alert-success alert-dismissible fade show mx-auto" style="max-width:95vw;">
        <%= success[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" 
                aria-label="Close"></button>
    </div>
    <% } %>


<% if (error && error.length> 0) { %>
    <br>
    <div class="alert alert-danger alert-dismissible fade show mx-auto" style="max-width:95vw;">
        <%= error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" 
                aria-label="Close"></button>
    </div>
    <% } %>
